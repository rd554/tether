# Netlify Environment Variables for Tether
# Add these in your Netlify dashboard under Site settings > Environment variables

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tether

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Server Configuration
NODE_ENV=production

# JWT Configuration (if you're using JWT tokens)
JWT_SECRET=your_jwt_secret_key_here

# OpenAI Configuration (Optional - for AI summaries)
OPENAI_API_KEY=your_openai_api_key_here

# Frontend URL (for CORS)
FRONTEND_URL=https://your-netlify-app.netlify.app

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here 